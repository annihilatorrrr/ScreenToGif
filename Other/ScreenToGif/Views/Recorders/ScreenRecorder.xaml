    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="96"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="{Binding ElementName=RecorderWindow, Path=Title, FallbackValue=ScreenToGif}" Margin="10,0,5,0"
                       VerticalAlignment="Center" FontSize="16" Foreground="{DynamicResource Brush.Foreground}"/>

            <TextBlock Grid.Column="1" Text="{DynamicResource S.Recorder.ClickOrPress}" VerticalAlignment="Center" TextAlignment="Center" Margin="5" 
                       Foreground="{DynamicResource Brush.Foreground.Medium}" Visibility="{Binding InteractionInfoTextVisibility, Mode=OneWay, FallbackValue={x:Static Visibility.Collapsed}}"/>

            <c:DisplayTimer Grid.Column="2" x:Name="MainDisplayTimer" Margin="5" CornerRadius="3" VerticalAlignment="Center" WindowChrome.IsHitTestVisibleInChrome="True"
                            CapturedCount="{Binding FrameCount, Mode=OneWay}" IsImpreciseCapture="{Binding HasImpreciseCapture, Mode=OneWay}"/>
        </Grid>

        <!--Controls-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="7"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="7"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="7"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2"/>
            </Grid.ColumnDefinitions>

            <c:ExButton Grid.Column="0" Margin="5,5,3,5" MinWidth="65" HorizontalContentAlignment="Center" Command="{Binding OptionsCommand}">
                <StackPanel>
                    <c:SymbolIcon Symbol="Setting" FontSize="26"/>
                    <TextBlock Text="Options"/>
                </StackPanel>
            </c:ExButton>

            <Separator Grid.Column="1" Width="1" Margin="3,10"/>

            <!--Frequency-->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="3,0" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal"
                            Visibility="{Binding InteractionInfoVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                    <c:SymbolIcon Symbol="CursorClick" Margin="3" Foreground="{DynamicResource Brush.Foreground.Medium}"/>
                    <c:SymbolIcon Symbol="Dismiss" FontSize="12" Margin="3" Foreground="{DynamicResource Brush.Foreground.Medium}" VerticalAlignment="Center"/>
                    <c:SymbolIcon Symbol="Keyboard" Margin="3" Foreground="{DynamicResource Brush.Foreground.Medium}"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Margin="3,0" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal"
                            Visibility="{Binding ManualInfoVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                    <c:SymbolIcon Symbol="Camera" Margin="3" Foreground="{DynamicResource Brush.Foreground.Medium}"/>
                    <c:SymbolIcon Symbol="Dismiss" FontSize="12" Margin="3" Foreground="{DynamicResource Brush.Foreground.Medium}" VerticalAlignment="Center"/>
                    <c:SymbolIcon Symbol="Keyboard" Margin="3" Foreground="{DynamicResource Brush.Foreground.Medium}"/>
                </StackPanel>

                <Grid Grid.Row="0" x:Name="FramerateGrid" Margin="3,0" ToolTip="{DynamicResource S.Recorder.Fps}"
                      ToolTipService.HorizontalOffset="-5" ToolTipService.Placement="Right"
                      Visibility="{Binding FramerateVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <c:IntegerStepper Grid.Column="0" x:Name="FrequencyIntegerStepper" Margin="0,5,0,2" MinWidth="45" IsEnabled="{Binding CanSwitchFrequency, Mode=OneWay}"
                                      MinHeight="23" StepValue="1" Minimum="1" Maximum="60" Value="{Binding Framerate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Grid.Column="1" x:Name="FrequencyTextBlock" Text="{DynamicResource S.Recorder.Fps.Short}" FontSize="12" Margin="3,0,0,0" VerticalAlignment="Center" 
                               Padding="0" Foreground="{DynamicResource Brush.Foreground.Medium}"/>
                </Grid>

                <c:SplitButton Grid.Row="1" Margin="1,5" SelectedIndex="{Binding CaptureFrequencyAsInteger, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                               Command="{Binding SwitchFrequencyCommand}" ToolTip="{DynamicResource S.Recorder.SwitchFrequency}"
                               IsEnabled="{Binding CanSwitchFrequency, Mode=OneWay}" SelectedIndexChanged="SplitButton_SelectedIndexChanged">
                    <c:ExMenuItem Header="{DynamicResource S.Options.Recorder.Frequency}" IsHitTestVisible="False" Icon="Timer" IsTabStop="False"/>
                    <Separator Height="1" Margin="3,2"/>
                    <c:ExMenuItem Header="{DynamicResource S.Options.Recorder.Frequency.Manual}" Icon="Camera" IsTabStop="True"/>
                    <c:ExMenuItem Header="{DynamicResource S.Options.Recorder.Frequency.Interaction}" Icon="CursorClick" IsTabStop="True"/>
                    <c:ExMenuItem Header="{DynamicResource S.Options.Recorder.Frequency.Second}" Icon="ShiftsActivity" IsTabStop="True"/>
                    <c:ExMenuItem Header="{DynamicResource S.Options.Recorder.Frequency.Minute}" Icon="ShiftsActivity" IsTabStop="True"/>
                    <c:ExMenuItem Header="{DynamicResource S.Options.Recorder.Frequency.Hour}" Icon="ShiftsActivity" IsTabStop="True"/>
                </c:SplitButton>
            </Grid>

            <Separator Grid.Column="3" Width="1" Margin="3,10"/>

            <!--Region-->
            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Visibility="{Binding SizeControlsVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <c:IntegerBox Grid.Column="0" x:Name="WidthIntegerBox" Padding="4,0" Margin="3,5,1,2" Minimum="40" Maximum="10000" MinWidth="35"
                                  Value="{Binding PixelWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding CanSelectRegion, Mode=OneWay}"
                                  MinHeight="23" ToolTip="Width, in pixels" ToolTipService.Placement="Bottom" ToolTipService.HorizontalOffset="-5"
                                  PropagateWheelEvent="True" ValueChanged="Size_ValueChanged" MouseWheel="SizeIntegerBox_MouseWheel"/>

                    <TextBlock Grid.Column="1" Text="Ã—" FontSize="16" FontFamily="Segoe Script" Margin="1" VerticalAlignment="Center" Padding="0" Foreground="{DynamicResource Brush.Foreground.Medium}"/>

                    <c:IntegerBox Grid.Column="2" Padding="4,0" Margin="1,5,3,2" Minimum="40" Maximum="10000" MinWidth="35"
                                  Value="{Binding PixelHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding CanSelectRegion, Mode=OneWay}"
                                  MinHeight="23" ToolTip="Height, in pixels" ToolTipService.Placement="Bottom" ToolTipService.HorizontalOffset="-5"
                                  PropagateWheelEvent="True" ValueChanged="Size_ValueChanged" MouseWheel="SizeIntegerBox_MouseWheel"/>
                </Grid>

                <TextBlock Grid.Row="0" Text="{Binding MonitorDescription, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" MaxWidth="90"
                           Margin="3,2" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource Brush.Foreground.Medium}"
                           Visibility="{Binding SizeDetailsVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                           ToolTip="{Binding MonitorDescriptionTooltip, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>

                <c:ExButton Grid.Row="1" Margin="3,2,3,5" MinWidth="70" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Padding="8,4" Command="{Binding SelectRegionCommand}">
                    <StackPanel Orientation="Horizontal">
                        <c:SymbolIcon Symbol="SquareHint" FontSize="18"/>
                        <TextBlock Margin="4,0,0,0" Text="Select" VerticalAlignment="Center"/>
                    </StackPanel>
                </c:ExButton>
            </Grid>

            <Separator Grid.Column="5" Width="1" Margin="3,10"/>

            <!--Actions-->
            <c:ExButton Grid.Column="6" x:Name="SnapButton" Margin="3,5" MinWidth="65" IsAccented="True" Command="{Binding SnapCommand}"
                        Visibility="{Binding SnapVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                <StackPanel>
                    <c:SymbolIcon Symbol="Camera" FontSize="26"/>
                    <TextBlock Text="Snap"/>
                </StackPanel>
            </c:ExButton>

            <c:ExButton Grid.Column="6" x:Name="RecordButton" Margin="3,5" MinWidth="65" IsAccented="True" Command="{Binding RecordCommand}"
                        Visibility="{Binding RecordVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                <StackPanel>
                    <c:SymbolIcon Symbol="Record" FontSize="26"/>
                    <TextBlock Text="Record"/>
                </StackPanel>
            </c:ExButton>

            <c:ExButton Grid.Column="7" x:Name="PauseButton" Margin="3,5" MinWidth="65" Command="{Binding PauseCommand}"
                        Visibility="{Binding PauseVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                <StackPanel>
                    <c:SymbolIcon Symbol="Pause" FontSize="26"/>
                    <TextBlock Text="Pause"/>
                </StackPanel>
            </c:ExButton>

            <c:ExButton Grid.Column="8" x:Name="StopLargeButton" Margin="3,5" MinWidth="65" Command="{Binding StopLargeCommand}"
                        Visibility="{Binding StopLargeVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                <StackPanel>
                    <c:SymbolIcon Symbol="RecordStop" FontSize="26"/>
                    <TextBlock Text="Stop"/>
                </StackPanel>
            </c:ExButton>

            <Grid Grid.Column="8">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <c:ExButton Grid.Row="0" x:Name="DiscardButton" Margin="3,5,5,2" MinWidth="65" HorizontalContentAlignment="Center" Padding="8,4"
                            Visibility="{Binding DiscardVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                            Command="{Binding DiscardCommand}">
                    <StackPanel Orientation="Horizontal">
                        <c:SymbolIcon Symbol="Delete" FontSize="18"/>
                        <TextBlock Margin="4,0,0,0" Text="Discard" VerticalAlignment="Center"/>
                    </StackPanel>
                </c:ExButton>

                <c:ExButton Grid.Row="1" x:Name="StopButton" Margin="3,2,5,5" MinWidth="65" HorizontalContentAlignment="Center" Padding="8,4"
                            Visibility="{Binding StopVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                            Command="{Binding StopCommand}">
                    <StackPanel Orientation="Horizontal">
                        <c:SymbolIcon Symbol="RecordStop" FontSize="18"/>
                        <TextBlock Margin="4,0,0,0" Text="Stop" VerticalAlignment="Center"/>
                    </StackPanel>
                </c:ExButton>
            </Grid>
        </Grid>
    </Grid>
</c:BaseScreenRecorder>