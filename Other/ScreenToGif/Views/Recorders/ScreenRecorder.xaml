                    <ThumbButtonInfo x:Name="StopThumbInfo" Command="{Binding StopCommand}" CommandTarget="{Binding ElementName=StopButton}" DismissWhenClicked="True" 
                                     Description="{DynamicResource S.Recorder.Stop}" Visibility="{Binding StopVisibility, Mode=OneWay}">
                        <ThumbButtonInfo.ImageSource>
                            <DrawingImage>
                                <DrawingImage.Drawing>
                                    <GeometryDrawing Brush="{DynamicResource Brush.Accent}"
                                                     Geometry="F1 M 4.52 4.799999 C 4.093333 4.799999 3.733333 4.946667 3.44 5.24 C 3.146667 5.533335 3 5.893334 3 6.32 L 3 17.279999 C 3 17.706665 3.146667 18.066666 3.44 18.359999 C 3.733333 18.653332 4.093333 18.799999 4.52 18.799999 L 15.52 18.799999 C 15.919998 18.799999 16.266665 18.653332 16.559999 18.359999 C 16.853333 18.066666 17 17.706665 17 17.279999 L 17 6.28 C 17 5.880001 16.853333 5.533335 16.559999 5.24 C 16.266665 4.946667 15.906665 4.799999 15.48 4.799999 Z"/>
